usage:	vmctl [-v] command [arg ...]
	vmctl console id
	vmctl create disk [-b base | -i disk] [-s size]
	vmctl load filename
	vmctl log [brief | verbose]
	vmctl pause id
	vmctl receive name
	vmctl reload 
	vmctl reset [all | switches | vms]
	vmctl send id
	vmctl show [id]
	vmctl start id | name [-cL] [-B device] [-b path] [-d disk] [-i count]
		[-m size] [-n switch] [-r path] [-t name]
	vmctl status [id]
	vmctl stop [id | -a] [-fw]
	vmctl unpause id
	vmctl wait id
