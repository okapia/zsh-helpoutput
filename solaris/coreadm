usage:
    coreadm [ -g pattern ] [ -i pattern ] [ -G content ] [ -I content ]
            [ -k pattern ]
            [ -e {global | process | global-setid | proc-setid | log | kzone} ]
            [ -d {global | process | global-setid | proc-setid | log | kzone} ]
    coreadm [ -p pattern ] [ -P content ] [ pid ... ]
