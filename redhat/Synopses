cmd rpm
version 4.14.1
emit --version | field -1 | getversion
emit --help | getusage

cmd dnf
version 4.1.0
emit --version | line 1 | getversion
emit -h | getusage

cmd yum
version 3.4.3
variant ! 'dnf' -- --version
emit --version | line 1 | getversion
emit -h | getusage

cmd scl
version 2.0.2
# dated releases, e.g 20130529 are older so prefix with 0.
step rpm -q --qf '%{VERSION}' scl-utils | sed -r 's/[0-9]{8}/0.&/' | getversion
emit -h | getusage
